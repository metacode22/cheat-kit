{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@config": ["config"],
      "@services/*": ["services/*"],
      "@constants/*": ["constants/*"],
      "@clients/*": ["clients/*"],
      "@dtos/*": ["dtos/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
